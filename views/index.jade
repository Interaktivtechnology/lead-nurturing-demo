extends layout

block content
  h2= title
  p Welcome to #{title}, please complete this form to use salesforce Web2Lead. 
  .jumbotron
    form(action='https://www.salesforce.com/servlet/servlet.WebToLead?encoding=UTF-8', method='POST')
      div.input-group
        input(type='hidden', name='oid', value='00D90000000XyAa')
        input(type='hidden', name='retURL', value='http://test.interaktiv.sg:3000/thanks/')
        label(for='first_name') First Name
        input.form-control#first_name(placeholder='First Name',maxlength='40', name='first_name', size='20', type='text')
      div.input-group
        label(for='last_name') Last Name
        input.form-control#last_name(placeholder='Last Name', maxlength='80', name='last_name', size='20', type='text')
      div.input-group
        label(for='email') Email
        input.form-control#email(placeholder='Email', maxlength='80', name='email', size='20', type='text')
      div.input-group
        label(for='company') Company
        input.form-control#company(placeholder='Company',maxlength='40', name='company', size='20', type='text')
      div.input-group
        label(for='city') City
        input.form-control#city(placeholder='City',maxlength='40', name='city', size='20', type='text')
      div.input-group
        label(for='country') Country
        input.form-control#country(placeholder='Country',maxlength='40', name='country', size='20', type='text')
      div.input-group
        label(for='revenue') Annual Revenue
        input.form-control#revenue(placeholder='Annual Revenue', name='revenue', size='20', type='text')
      div.input-group
        label(for='00N90000002ECWS') Promo Code 
        input.form-control#00N90000002ECWS(maxlength='255', name='SICCode', size='20', type='text')
      br
      input.btn.btn-primary(type='submit', name='submit')
